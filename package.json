{
  "name": "workflow-manager",
  "version": "1.0.0",
  "description": "工作流管理工具 - LLM/MCP/工作流管理",
  "type": "module",
  "main": "electron.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc -p electron/tsconfig.json",
    "preview": "vite preview",
    "build:electron": "tsc -p electron/tsconfig.json && node -e \"const fs=require('fs');const path=require('path');const distPath=path.join(__dirname,'electron/dist');['main.js','preload.js'].forEach(f=>{const oldPath=path.join(distPath,f);const newPath=path.join(distPath,f.replace('.js','.cjs'));if(fs.existsSync(oldPath)){fs.renameSync(oldPath,newPath);console.log('Renamed',f,'to',f.replace('.js','.cjs'));}});\"",
    "rebuild:electron": "electron-rebuild -f -w node-pty",
    "postinstall": "electron-rebuild -f -w node-pty",
    "electron": "npm run build:electron && NODE_ENV=development electron .",
    "electron:dev": "concurrently -k -s first \"npm run dev\" \"wait-on http://localhost:5174 && npm run build:electron && NODE_ENV=development electron .\"",
    "build:all": "npm run build && electron-builder"
  },
  "dependencies": {
    "@google/genai": "^1.31.0",
    "@google/generative-ai": "^0.24.1",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@xterm/addon-search": "^0.14.0",
    "@xterm/addon-unicode11": "^0.7.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.20.0",
    "remark-gfm": "^4.0.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-web-links": "^0.9.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^8.2.2",
    "electron": "^32.3.3",
    "node-pty": "^1.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.3.3",
    "vite": "^7.2.4",
    "wait-on": "^7.2.0"
  }
}
